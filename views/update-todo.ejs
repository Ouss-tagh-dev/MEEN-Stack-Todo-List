<%- include('partials/header.ejs') %>
    <div class="table-container">
        <h1 class="todo-title">Update Todo</h1>
        <div>
            <a href="/" class="btn">Back</a>
            <form action="/update-todo/<%=todo._id%>" method="POST">
                <div class="update-todo">
                    <div class="form-group">
                        <label for="title" class="text-light">Title</label>
                        <input type="text" name="title" id="title" value="<%= todo.title %>" required />
                    </div>
                    <div class="form-group">
                        <label for="description" class="text-light">Description</label>
                        <input type="text" name="desc" id="description" value="<%= todo.desc %>" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn">Update Task</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
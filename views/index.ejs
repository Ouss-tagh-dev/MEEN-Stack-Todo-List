<%- include('partials/header.ejs') %>
    <div class="table-container">
        <h1 class="todo-title">Todo List</h1>
        <div>
            <a href="/add-todo" class="btn">Add todo</a>
            <br><br>
        </div>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Action</th>
            </tr>

            <% for(let i=0; i < todos.length; i++) { %>
                <tr>
                    <td>
                        <%= todos[i].title %>
                    </td>
                    <td>
                        <%= todos[i].desc %>
                    </td>
                    <td>
                        <%= moment(todos[i].createdAt).format("YYYY -MM-DD HH:mm") %>
                    </td>
                    <td>
                        <%= moment(todos[i].updatedAt).format("YYYY -MM-DD HH:mm") %>
                    </td>
                    <td>
                        <a href="/update-todo?id=<%=todos[i]._id%>" class="btn">Edit</a>
                        <a href="/delete-todo?id=<%=todos[i]._id%>" class="btn">Delete</a>
                    </td>
                </tr>
                <% } %>

        </table>
    </div>
    <%- include('partials/footer.ejs') %>